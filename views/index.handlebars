<h1>Eat-Da-Burger!!</h1>

<h2>What would you like today?</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger">
      <button type="submit">Add Your Burger</button>
    </form>
  </div>
</div>

<main>
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-4">
            {{#each burgers}}
                {{#unless devoured}}
                    <ul>
                        {{> burgers/burger-block devoured=true}}

                    </ul>

                {{/unless}}
            {{/each}}
            </div>

            <div class="col-4">
                {{#each burgers}}
                {{#if devoured}}
                    <ul>
                        {{burger}}

                    </ul>

                {{/if}}
            {{/each}}
            </div>

        </div>
    </div>
</main>
